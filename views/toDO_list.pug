doctype html
html(lang='en')
  head
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title TODO App
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    link(rel='stylesheet', href='/styles/style.css')
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
  body
    h3.information
        | This web application was created to fulfill Web Technology
        | module&rsquo;s requirements and does not represent an actual
        | company or service
    .app
      h4.mb-3 TO-DO App
      #addNew(data-bs-toggle='modal', data-bs-target='#form')
        span Add New Task
        i.fas.fa-plus
      form#form.modal.fade(tabindex='-1', aria-labelledby='exampleModalLabel', aria-hidden='true' action="/api/user/to-do" method="POST")
        .modal-dialog
          .modal-content
            .modal-header
              h5#exampleModalLabel.modal-title Add New Task
              button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
            .modal-body
              p Task Title
              input#textInput.form-control(type='text', name='' required='')
              #msg
              br
              p Due Date
              input#dateInput.form-control(type='date', name='' required='')
              br
              p Description
              textarea#textarea.form-control(name='', cols='30', rows='5')
            .modal-footer
              div(id = "error")
              button.btn.btn-secondary(type='button', data-bs-dismiss='modal') Close
              button#add.btn.btn-primary(type='submit') Add
      h5.text-center.my-3 Tasks
      #tasks
        each task in all_tasks
          #task
            p.fw-bold
              | #{task.task.textInput}
            p.small.text-secondary
              | #{task.task.dateInput}
            p 
              | #{task.task.textarea}
            span.options
              i.fas.fa-edit(onclick='editTask(this)' data-bs-toggle='modal' data-bs-target='#form')
              i.fas.fa-trash-alt(onclick='deleteTask(this);createTasks()')

    script(src='/javascript/index.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous')